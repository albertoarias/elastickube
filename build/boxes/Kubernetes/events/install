#!/bin/bash -e

# Download kubernetes
K8S_DIR="/opt/kubernetes/v{{ KUBERNETES_VERSION }}"
K8S_URL=https://storage.googleapis.com/kubernetes-release/release/v{{ KUBERNETES_VERSION }}/kubernetes-server-linux-amd64.tar.gz

if [[ ! -d "${K8S_DIR}" ]]
then
    echo "Downloading kubernetes (this make time a few minutes)..."
    mkdir -p ${K8S_DIR}
    curl -ksL ${K8S_URL} | tar -xz -C ${K8S_DIR} --strip-components=2
fi

# Install bridge utils
if [[ -x /usr/bin/yum ]]
then
   yum -y install bridge-utils
else
   apt-get -y install bridge-utils
fi